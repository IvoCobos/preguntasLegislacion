<Window x:Class="QuestionarionDelitos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuestionarionDelitos"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Width="570" Height="35" Text="Bienvenido a la prueba de Legislación sobre delitos informáticos."
                   FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>
        <TextBlock Width="200" Height="35" Text="¡Que tengas suerte!" FontSize="20" HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"/>
        <Button Name="btnStart" Width="100" Height="35" Content="Empezar" Grid.Row="1" VerticalAlignment="Center"
                HorizontalAlignment="Center" Click="btnStart_Click"/>
    </Grid>
</Window>
